<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <div class="h-full ml-14 md:ml-64">
    <div class="overflow-x-auto">
      <div
        class="min-w-screen min-h-screen flex items-center justify-center font-sans overflow-hidden"
      >
        <div class="w-full lg:w-5/6">
          <div class="bg-white shadow-md rounded my-6">
            <table class="min-w-max w-full table-auto">
              <thead>
                <tr
                  class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal"
                >
                  <!-- <th class="py-3 px-6 text-center">Id</th> -->
           
          <th></th>
          <th>End</th>
          <th></th>
          <th></th>
          <th></th>
          <th>Final Salary</th>
        </tr>
                  <th class="py-3 px-6 text-center">First Name</th>
                  <th class="py-3 px-6 text-center">Last Name</th>
                  <th class="py-3 px-6 text-center">Department</th>
                  <th class="py-3 px-6 text-center">Date From</th>
                  <th class="py-3 px-6 text-center">Date To</th>
                  <th class="py-3 px-6 text-center">Hours worked</th>
                  <th class="py-3 px-6 text-center">Salary</th>
                  <th class="py-3 px-6 text-center">Overtime</th>
                  <th class="py-3 px-6 text-center">Total Salary</th>
                  <th class="py-3 px-6 text-center">Action</th>
                </tr>
              </thead>
              <tbody class="text-gray-600 text-sm font-light">
                <% if(salary.length) { for (let i = 0; i <
                  salary.length; i++) { %>
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                  <td class="py-3 px-6 text-center">
                    <div class="flex justify-center space-x-3 items-center">
                      <span><%= salary[i].f_name %></span>
                    </div>
                  </td>
                  <td class="py-3 px-6 text-center">
                    <div class="flex items-center justify-center">
                      <span><%= salary[i].l_name %></span>
                    </div>
                  </td>
                  <td class="py-3 px-6 text-center">
                    <div class="flex items-center justify-center">
                      <span><%= salary[i].department_name %></span>
                    </div>
                  </td>

                  <td class="py-3 px-6 text-center">
                    <div class="flex item-center justify-center">
                      <a
                        href="/salaries/edit/<%= employees[i].id %>"
                        class="w-4 mr-2 transform hover:text-blue-500 hover:scale-110 cursor-pointer"
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                          />
                        </svg>
                      </a>
                      <a
                        href="/salaries/delete/<%= employees[i].id %>"
                        class="w-4 mr-2 transform hover:text-blue-500 hover:scale-110"
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                          />
                        </svg>
                      </a>
                    </div>
                  </td>
                </tr>

                <% } } else { %>
                <tr>
                  <td colspan="7" class="px-4 py-3 font-semibold text-center">
                    NO SALARIES DATA
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>











  <div class="navigation">
    <div class="nl">
      <div class="search">
        <i class="fas fa-search"></i>
        <input type="text" placeholder="Search" />
      </div>
    </div>
    <div class="profile">
      <i class="fas fa-bell"></i>
      <img src="https://icon-library.com/images/no-profile-picture-icon/no-profile-picture-icon-18.jpg" alt="" />
    </div>
  </div>


  <div class="table-head">
    <h2>Salary Info</h2>
  </div>

  <div class="board">
    <table width="100%">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Department</th>
          <th>Start</th>
          <th>End</th>
          <th>Hours worked</th>
          <th>Salary</th>
          <th>Overtime</th>
          <th>Final Salary</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if(payinfo.length > 0) { %>
        <% payinfo.forEach((pay)=>{ %>
        <tr>
          <td class="fname"><%=pay.first_nm%></td>
          <td class="lname"><%=pay.last_nm%></td>
          <td class="lname"><%=pay.department_nm%></td>
          <td class="department"><%=pay.start_time%></td>
          <td class="nis"><%=pay.end_time%></td>
          <td class="trn"><%=pay.hrs%></td>
          <td class="trn"><%=pay.salary%></td>
          <td class="exphrs"><%=pay.overtime%></td>
          <td class="exphrs"><%=pay.final_salary%></td>
        </tr>
        <% }) %>
        <% } else {%>
        <tr>
          <td colspan="4">NO Overtime</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

</body>

</html>