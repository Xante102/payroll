<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>

  <body>
    <div class="h-full ml-14 md:ml-64">
      <div class="pt-48">
        <section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md">
          <h2 class="text-lg font-semibold text-gray-700 capitalize">
            Edit Employee
          </h2>

          <form method="POST" action="/employees/update">
            <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
              <div>
                <label class="text-gray-700">First Name</label>
                <input
                  value="<%=edit.f_name%>"
                  name="f_name"
                  type="text"
                  class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                />
              </div>

              <div>
                <label class="text-gray-700">Last Name</label>
                <input
                  value="<%=edit.l_name%"
                  name="l_name"
                  type="text"
                  class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                />
              </div>

              <div>
                <label class="text-gray-700">Email</label>
                <input
                  value="<%=edit.email%"
                  name="email"
                  type="email"
                  class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                />
              </div>

              <div>
                <label class="text-gray-700">Password</label>
                <input
                  value="<%=edit.password%"
                  name="password"
                  type="password"
                  class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                />
              </div>

              <div>
                <label class="text-gray-700">Departments</label>
                <select
                  name="dpt_id"
                  id=""
                  class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                >
                  <% departments.forEach((department)=>{ %>
                  <option value="<%=department.id%>">
                    <%=edit.department_name%>
                  </option>
                  <% })%>
                </select>
              </div>

              <div>
                <label class="text-gray-700">Role</label>
                <select
                  name="role_id"
                  class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                  id=""
                >
                  <option selected value="<%=edit.role_id%>">
                    <%=edit.role%>
                  </option>
                  <% roles.forEach((role)=>{ %>
                  <option value="<%=role.id%>"><%=role.role%></option>
                  <% }) %>
                </select>
              </div>

              <div>
                <label class="text-gray-700"></label>
                <input
                  value="<%=edit.id%>"
                  name="id"
                  type="hidden"
                  class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                />
              </div>
            </div>

            <div>
              <label class="text-gray-700"></label>
              <input
                value="<%=login.login_id%>"
                name="login_id"
                type="hidden"
                class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
              />
            </div>

            <div class="flex justify-end mt-6">
              <button
                type="submit"
                class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:bg-blue-500"
              >
                Save
              </button>
            </div>
          </form>
        </section>
      </div>
    </div>
  </body>
</html>
