<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/styles/add-salary.css">
</head>

<body>

  <div class="h-full ml-14 md:ml-64">
    <div class="pt-48">
      <section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md">
        <h2 class="text-lg font-semibold text-gray-700 capitalize">
          Edit Salary
        </h2>

        <form method="POST" action="/salary-list/update">
          <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
            <div>
              <label class="text-gray-700">Select Employee</label>
              <select
                name="emp_id"
                id=""
                class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
              >
                <% employees.forEach((employee)=>{ %>
                <option value="<%=employee.id%>">
                  <%=employee.f_name%> <%=employee.l_name%>
                </option>
                <% })%>
              </select>
            </div>

            <div>
              <label class="text-gray-700">Hours Worked</label>
              <input
                name="hrs"
                type="number"
                class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
              />
            </div>

            <div>
              <label class="text-gray-700">Departments</label>
              <select
                name="dpt_id"
                id=""
                class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
              >
                <% departments.forEach((department)=>{ %>
                <option value="<%=department.id%>">
                  <%=department.department_name%>
                </option>
                <% })%>
              </select>
            </div>

            <div>
              <label class="text-gray-700">Paycycle</label>
              <select
                name="paycycle_id"
                id=""
                class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
              >
                <% paycycle.forEach((paycycle)=>{ %>
                <option value="<%=paycycle.id%>">
                  <%=paycycle.date_from%>
                </option>
                <% })%>
              </select>
            </div>

            <div>
              <label class="text-gray-700">Overtime Hours</label>
              <input
                name="ovt_hrs"
                type="number"
                class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
              />
            </div>

            <div>
              <label class="text-gray-700"></label>
              <input
              value="<%=salary.hrs_id%>"
                name="hrs_id"
                type="hidden"
                class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
              />
            </div>

            <div>
              <label class="text-gray-700"></label>
              <input
              value="<%=salary.salary_id%>"
                name="salary_id"
                type="hidden"
                class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
              />
            </div>
          </div>

          <div class="flex justify-end mt-6">
            <button
              type="submit"
              class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:bg-blue-500"
            >
              Save
            </button>
          </div>
        </form>
      </section>
    </div>
  </div>



















  <form action="/salary-list/update" method="post">
    <input type="hidden" value="<%=salary.work_id%>" name="work_id">
    <input type="hidden" value="<%=salary.salary_id%>" name="salary_id">
    <h2>Edit hours</h2>



    <div class="contact">
      <div class="name">
        <span>Employee ID</span>
        <input type="text" value="<%=salary.emp_id%>" name="emp_id">
        <span>salary</span>
        <input type="text" value="<%=salary.salary%>" name="salary">
      </div>
      <div class="login">
        <span>Work hours</span>
        <input type="text" value="<%=salary.hrs%>" name="hrs">
        <span>Overtime hours</span>
        <input type="text" value="<%=salary.emp_id%>" name="overtime_hrs">
      </div>
    </div>

    <span>Departments</span>
    <select name="depart_id" id="">
      <option value="<%=salary.depart_id%>"><%=salary.department_nm%></option>
      <% departments.forEach((department)=>{ %>
      <option value="<%=department.id%>"><%=department.department_nm%></option>
      <% })%>
    </select>

    <span>Paycycle</span>
    <select name="paycycle_id" id="">
      <option value="<%=salary.cycle_id%>"><%=salary.start_time%></option>
      <% paycycle.forEach((cycle)=>{ %>
      <option value="<%=cycle.id%>"><%=cycle.start_time%></option>
      <% })%>
    </select>


    <span>Overtime</span>
    <input type="text" value="<%=salary.overtime%>" name="overtime">



    <span>Final Salary</span>
    <input type="text" value="<%=salary.final_salary%>" name="final_salary">

    <button class="emp-add" type="submit">Update</button>
  </form>

</body>

</html>